#!/bin/sh

set -e

. `which sugar.lib`

log Asserting sshd is enabled...
assertenabled sshd

log Installing /etc/ssh/sshd_config...
install -o root -g wheel -m 644 $SUGARD/sshd_config /etc/ssh/sshd_config

log Checking sshd_config...
quietrun sshd -t

log Restarting sshd
quietrun rcctl restart sshd
